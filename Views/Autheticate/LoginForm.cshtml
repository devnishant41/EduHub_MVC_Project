@model Test_EduHub.Models.Domain.LoginModel



<div class="login-container d-flex flex-column mt-5">
    <h4 class="mb-3">Login</h4>
    <form asp-action="LoginForm" method="post" class="login-form p-5 gap-3">
        <div class="form-group gap-2">
            <input asp-for="Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3 text-center justify-content-center mx-auto">Login</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                Toastify({
                    text: successMessage,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "#4361ee",
                    stopOnFocus: true
                }).showToast();
            }
        });
    </script>
}
