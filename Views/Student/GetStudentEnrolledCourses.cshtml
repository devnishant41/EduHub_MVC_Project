@model IEnumerable<Test_EduHub.Models.Domain.AllCoursesViewModel>

@{
    ViewData["Title"] = "AllCourses";
}



<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-5 d-flex">
                <div class="card position-relative d-flex flex-column" style="width: 18rem;">
                    <img src="~/images/courses/course.webp" class="card-img-top" alt="..."
                        style="height: 180px; object-fit: cover;">
                    <div class="card-body flex-grow-1 d-flex flex-column">
                        <h6 class="card-title text-capitalize">@item.Title</h6>
                        <p class="card-text fs-6">
                            @item.CourseStartDate.ToString("MMMM dd, yy") - @item.CourseStartDate.ToString("MMMM dd, yy")
                        </p>
                        <p class="card-text fw-bolder">
                            @item.CategoryName
                        </p>
                        <div class="d-flex justify-content-between">

                            <p class="card-text text-capitalize ">
                                @item.Level
                            </p>
                            <p class="card-text text-capitalize fw-bold">
                               â‚¹ @item.Price
                            </p>

                        </div>
                        <div class="mt-auto position-absolute bottom-0 end-0 p-2 cursor-pointer mt-2 ">
                            <a asp-action="MyCourseDetails" asp-controller="Student" asp-route-id="@item.Id">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-arrow-up-right-square mt-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm5.854 8.803a.5.5 0 1 1-.708-.707L9.243 6H6.475a.5.5 0 1 1 0-1h3.975a.5.5 0 0 1 .5.5v3.975a.5.5 0 1 1-1 0V6.707z" />
                            </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>