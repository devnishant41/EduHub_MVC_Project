@model IEnumerable<Test_EduHub.Models.Domain.Enrollments.EnrollmentViewModel>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                Toastify({
                    text: successMessage,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "#4361ee",
                    stopOnFocus: true
                }).showToast();
            }
        });
    </script>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Enrollment List</title>
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">Enrollment List</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Enrollment Date</th>
                    <th>Course Name</th>
                    <th>Student Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.EnrollmentDate.ToString("dd-MMMM-yyyy")</td>
                        <td>@enrollment.Title</td>
                        <td>@enrollment.FirstName @enrollment.LastName</td>
                        <td>@enrollment.Status</td>
                        <td>
                            <a asp-action="UpdateEnrollmentStatus" asp-controller="Enrollment" asp-route-id="@enrollment.Id">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-pencil text-primary" viewBox="0 0 16 16">
                                <path
                                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />

                            </a>
                               
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Dashboard" asp-controller="Dashboard" class="">Back to Dashboard</a>
    </div>

   
</body>

</html>