@model Test_EduHub.Models.Domain.SubmitFeedbackModel
<h3>Submit Feedback Here!</h3>

<form asp-controller="Feedback" asp-action="SubmitFeedback" method="post" asp-route-id="@Model.CourseId">
    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

    <div class="d-flex align-items-center gap-3 mt-3">
        <p>Course Name:</p>
        <p class="fs-5 fw-bolder">@ViewBag.CourseName</p>
    </div>

    <!-- Hidden input for CourseId -->
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Feedback">Message:</label>
        <textarea asp-for="Feedback" class="form-control"></textarea>
        <span asp-validation-for="Feedback" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit Feedback" class="btn btn-sm btn-primary mt-3" />
    </div>
</form>


